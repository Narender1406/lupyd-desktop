{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "lupyd-desktop",
  "version": "0.1.0",
  "identifier": "com.lupyd.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:8080",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "make"
  },
  "app": {
    "windows": [
      {
        "title": "Lupyd",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "single-instance": null
  }
}