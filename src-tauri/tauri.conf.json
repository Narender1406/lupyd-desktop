{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lupyd",
  "version": "0.0.3",
  "identifier": "com.lupyd.client",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:8080",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "make build"
  },
  "app": {
    "windows": [
      {
        "title": "Lupyd",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "single-instance": null,
    "deep-link": {
      "mobile": [
        {
          "scheme": [
            "lupyd"
          ],
          "appLink": false
        }
      ],
      "desktop": {
        "schemes": [
          "lupyd"
        ]
      }
    },
    "notification": null,
    "fs": null,
    "opener": null
  }
}